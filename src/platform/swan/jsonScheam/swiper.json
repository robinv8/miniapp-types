[
  {
    "name": "indicator-dots",
    "type": "Boolean",
    "defaultValue": "false",
    "description": "是否显示面板指示点",
    "required": false
  },
  {
    "name": "indicator-color",
    "type": "Color",
    "defaultValue": "rgba(0, 0, 0, .3)",
    "description": "指示点颜色",
    "required": false
  },
  {
    "name": "indicator-active-color",
    "type": "Color",
    "defaultValue": "#333",
    "description": "当前选中的指示点颜色",
    "required": false
  },
  {
    "name": "autoplay",
    "type": "Boolean",
    "defaultValue": "false",
    "description": "是否自动切换",
    "required": false
  },
  {
    "name": "current",
    "type": "Number",
    "defaultValue": "0",
    "description": "当前所在页面的 index",
    "required": false
  },
  {
    "name": "current-item-id",
    "type": "String",
    "description": "当前所在滑块的 item-id ，不能与 current 被同时指定",
    "required": false
  },
  {
    "name": "interval",
    "type": "Number",
    "defaultValue": "5000",
    "description": "自动切换时间间隔（单位：ms）",
    "required": false
  },
  {
    "name": "duration",
    "type": "Number",
    "defaultValue": "500",
    "description": "滑动动画时长（单位：ms）",
    "required": false
  },
  {
    "name": "circular",
    "type": "Boolean",
    "defaultValue": "false",
    "description": "是否采用衔接滑动",
    "required": false
  },
  {
    "name": "vertical",
    "type": "Boolean",
    "defaultValue": "false",
    "description": "滑动方向是否为纵向",
    "required": false
  },
  {
    "name": "previous-margin",
    "type": "String",
    "defaultValue": "\"0px\"",
    "description": "前边距，可用于露出前一项的一小部分，支持 px 和 rpx",
    "required": false
  },
  {
    "name": "next-margin",
    "type": "String",
    "defaultValue": "\"0px\"",
    "description": "后边距，可用于露出后一项的一小部分，支持 px 和 rpx",
    "required": false
  },
  {
    "name": "display-multiple-items",
    "type": "Number",
    "defaultValue": "1",
    "description": "同时显示的滑块数量",
    "required": false
  },
  {
    "name": "disable-touchmove",
    "type": "Boolean",
    "defaultValue": "false",
    "description": "是否停止响应用户 touchmove 操作",
    "required": false
  },
  {
    "name": "bindchange",
    "type": "EventHandle",
    "description": "current 改变时会触发 change 事件，event.detail = {current: current, source: source}",
    "required": false
  },
  {
    "name": "bindanimationfinish",
    "type": "EventHandle",
    "description": "动画结束时会触发 animationfinish 事件，event.detail 同上",
    "required": false
  }
]