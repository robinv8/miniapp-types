[
  {
    "name": "path",
    "type": "String",
    "description": "动画资源地址，目前只支持绝对路径",
    "required": true
  },
  {
    "name": "loop",
    "type": "Boolean",
    "defaultValue": "false",
    "description": "动画是否循环播放",
    "required": false
  },
  {
    "name": "autoplay",
    "type": "Boolean",
    "defaultValue": "true",
    "description": "动画是否自动播放",
    "required": false
  },
  {
    "name": "action",
    "type": "String",
    "options": [
      "play",
      "pause",
      "stop"
    ],
    "defaultValue": "play",
    "description": "动画操作，可取值 play、pause、stop",
    "required": false
  },
  {
    "name": "hidden",
    "type": "Boolean",
    "defaultValue": "true",
    "description": "是否隐藏动画",
    "required": false
  },
  {
    "name": "bindended",
    "type": "EventHandle",
    "description": "当播放到末尾时触发 ended 事件（自然播放结束会触发回调，循环播放结束及手动停止动画不会触发）",
    "required": false
  }
]