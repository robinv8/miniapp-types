[
  {
    "name": "scroll-x",
    "type": "boolean",
    "defaultValue": "false",
    "description": "允许横向滚动",
    "required": false
  },
  {
    "name": "scroll-y",
    "type": "boolean",
    "defaultValue": "false",
    "description": "允许竖向滚动",
    "required": false
  },
  {
    "name": "scroll-with-animation",
    "type": "boolean",
    "defaultValue": "false",
    "description": "在设置滚动条位置时使用动画过渡",
    "required": false
  },
  {
    "name": "upper-threshold",
    "type": "number",
    "defaultValue": "50",
    "description": "距顶部/左边多远时（单位 px），触发 scrolltoupper 事件",
    "required": false
  },
  {
    "name": "lower-threshold",
    "type": "number",
    "defaultValue": "50",
    "description": "距底部/右边多远时（单位 px），触发 scrolltolower 事件",
    "required": false
  },
  {
    "name": "scroll-top",
    "type": "number",
    "description": "设置内容垂直滚动的像素数",
    "required": false
  },
  {
    "name": "scroll-left",
    "type": "number",
    "description": "设置内容水平滚动的像素数",
    "required": false
  },
  {
    "name": "scroll-into-view",
    "type": "string",
    "description": "值应为某子元素 id（id 不能以数字开头）。设置哪个方向可滚动，则在哪个方向滚动到该元素",
    "required": false
  },
  {
    "name": "bindscroll",
    "type": "EventHandle",
    "description": "滚动时触发",
    "required": false
  },
  {
    "name": "bindscrolltoupper",
    "type": "EventHandle",
    "description": "滚动到顶部/左边",
    "required": false
  },
  {
    "name": "bindscrolltolower",
    "type": "EventHandle",
    "description": "滚动到底部/右边",
    "required": false
  }
]