[
  {
    "name": "src",
    "type": "string",
    "description": "图片资源地址",
    "required": false
  },
  {
    "name": "mode",
    "type": "string",
    "options": [
      "scaleToFill",
      "aspectFit",
      "aspectFill",
      "widthFix",
      "heightFix",
      "top",
      "bottom",
      "center",
      "left",
      "right",
      "top left",
      "top right",
      "bottom left",
      "bottom right"
    ],
    "defaultValue": "scaleToFill",
    "description": "图片裁剪、缩放的模式",
    "required": false
  },
  {
    "name": "webp",
    "type": "boolean",
    "defaultValue": "false",
    "description": "默认不解析 webP 格式，只支持网络资源",
    "required": false
  },
  {
    "name": "lazy-load",
    "type": "boolean",
    "defaultValue": "false",
    "description": "图片懒加载，在即将进入一定范围（上下三屏）时才开始加载",
    "required": false
  },
  {
    "name": "show-menu-by-longpress",
    "type": "boolean",
    "defaultValue": "false",
    "description": "长按图片显示发送给朋友、收藏、保存图片、搜一搜、打开名片/前往群聊/打开小程序（若图片中包含对应二维码或小程序码）的菜单。",
    "required": false
  },
  {
    "name": "binderror",
    "type": "eventhandle",
    "description": "当错误发生时触发，event.detail = {errMsg}",
    "required": false
  },
  {
    "name": "bindload",
    "type": "eventhandle",
    "description": "当图片载入完毕时触发，event.detail = {height, width}",
    "required": false
  }
]