{
  "title": "scroll-view",
  "type": "object",
  "properties": {
    "scroll-x": {
      "type": "boolean",
      "description": "允许横向滚动"
    },
    "scroll-y": {
      "type": "boolean",
      "description": "允许竖向滚动"
    },
    "scroll-with-animation": {
      "type": "boolean",
      "description": "在设置滚动条位置时使用动画过渡"
    },
    "upper-threshold": {
      "type": "number",
      "description": "距顶部/左边多远时（单位 px），触发 scrolltoupper 事件"
    },
    "lower-threshold": {
      "type": "number",
      "description": "距底部/右边多远时（单位 px），触发 scrolltolower 事件"
    },
    "scroll-top": {
      "type": "number",
      "description": "设置内容垂直滚动的像素数"
    },
    "scroll-left": {
      "type": "number",
      "description": "设置内容水平滚动的像素数"
    },
    "scroll-into-view": {
      "type": "string",
      "description": "值应为某子元素 id（id 不能以数字开头）。设置哪个方向可滚动，则在哪个方向滚动到该元素"
    },
    "bindscroll": {
      "type": "eventHandle",
      "description": "滚动时触发"
    },
    "bindscrolltoupper": {
      "type": "eventHandle",
      "description": "滚动到顶部/左边"
    },
    "bindscrolltolower": {
      "type": "eventHandle",
      "description": "滚动到底部/右边"
    }
  },
  "additionalProperties": false
}